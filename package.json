{
  "name": "maplibre-versatiles-styler",
  "private": true,
  "version": "0.4.1",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && rollup -c && rm -rf dist/dts",
    "check": "npm run lint && npm run test && npm run build && npm run format:check",
    "dev": "trap 'kill 0' SIGINT; rollup -wc rollup.config.demo.js & http-server -s -c-1 demo",
    "format": "prettier --write --log-level warn .",
    "format:check": "prettier --check .",
    "lint": "eslint --color .",
    "prepack": "npm run build",
    "prepare": "husky",
    "release": "npx vrt release-npm",
    "test-coverage": "vitest run --coverage",
    "test-unit": "vitest run",
    "test": "npm run test-unit",
    "upgrade": "npm-check-updates -u && rm -f package-lock.json && rm -rf node_modules; npm i"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jsdom": "^27.0.0",
    "@versatiles/release-tool": "^2.5.0",
    "@versatiles/style": "^5.8.4",
    "@vitest/coverage-v8": "^4.0.15",
    "color": "^5.0.3",
    "eslint": "^9.39.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "maplibre-gl": "^5.14.0",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.7.4",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-scss": "^4.0.1",
    "rollup": "^4.53.3",
    "sass-embedded": "^1.95.1",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.49.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
