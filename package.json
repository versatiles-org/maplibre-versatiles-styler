{
  "name": "maplibre-versatiles-styler",
  "version": "1.1.2",
  "type": "module",
  "main": "dist/maplibre-versatiles-styler.umd.cjs",
  "module": "dist/maplibre-versatiles-styler.js",
  "types": "dist/maplibre-versatiles-styler.d.ts",
  "exports": {
    ".": {
      "types": "./dist/maplibre-versatiles-styler.d.ts",
      "import": "./dist/maplibre-versatiles-styler.js",
      "require": "./dist/maplibre-versatiles-styler.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && vite build",
    "check": "npm run format:check && npm run lint && npm run test && npm run build && npm run test-e2e",
    "dev": "vite",
    "format": "prettier --write --log-level warn .",
    "format:check": "prettier --check .",
    "lint": "eslint --color .",
    "prepack": "npm run build",
    "prepare": "husky",
    "preview": "vite preview",
    "release": "npx vrt release-npm",
    "test-coverage": "vitest run --coverage",
    "screenshots": "playwright test --config=playwright.screenshots.config.ts",
    "test-e2e": "playwright test",
    "test-unit": "vitest run",
    "test": "npm run test-unit",
    "upgrade": "npm-check-updates -u && rm -f package-lock.json && rm -rf node_modules; npm i"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.3",
    "@versatiles/release-tool": "^2.7.0",
    "@versatiles/style": "^5.9.3",
    "@vitest/coverage-v8": "^4.0.18",
    "color": "^5.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.15.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "maplibre-gl": "^5.17.0",
    "npm-check-updates": "^19.3.2",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "sass-embedded": "^1.97.3",
    "svelte": "^5.50.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
