{
  "name": "maplibre-versatiles-styler",
  "private": true,
  "version": "0.4.1",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && vite build",
    "check": "npm run lint && npm run test && npm run build && npm run format:check",
    "dev": "vite",
    "format": "prettier --write --log-level warn .",
    "format:check": "prettier --check .",
    "lint": "eslint --color .",
    "prepack": "npm run build",
    "prepare": "husky",
    "preview": "vite preview",
    "release": "npx vrt release-npm",
    "test-coverage": "vitest run --coverage",
    "test-unit": "vitest run",
    "test": "npm run test-unit",
    "upgrade": "npm-check-updates -u && rm -f package-lock.json && rm -rf node_modules; npm i"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/jsdom": "^27.0.0",
    "@versatiles/release-tool": "^2.7.0",
    "@versatiles/style": "5.8.4",
    "@vitest/coverage-v8": "^4.0.18",
    "color": "^5.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.14.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "maplibre-gl": "^5.17.0",
    "npm-check-updates": "^19.3.2",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "sass-embedded": "^1.97.3",
    "svelte": "^5.49.2",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.54.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
